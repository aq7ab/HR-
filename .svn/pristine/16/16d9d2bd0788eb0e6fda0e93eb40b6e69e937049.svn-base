
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="../../css/table.css" type="text/css" />
    <script type="text/javascript" src="../../javascript/jquery-1.7.2.js"></script>

    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <title>人力资源薪酬发放登记审核</title>
    <style type="text/css">
        body {
            background-color: #F1F2F7;
        }

        .el-button--danger {
            color: rgb(255, 255, 255);
            background-color: #2A3542;
            border-color: #2A3542;
        }

            .el-button--danger:focus, .el-button--danger:hover {
                color: rgb(255, 255, 255);
                background-color: #2A3542;
                border-color: #2A3542;
            }
    </style>
</head>
<body>
    <div id="app">
        <table width="100%">
         
            <el-breadcrumb separator="/" style="font-size:16px;margin-top:27px">
                <el-breadcrumb-item :to="{ path: '/' }">人力资源管理</el-breadcrumb-item>
                <el-breadcrumb-item><a href="#">调动管理</a></el-breadcrumb-item>
                <el-breadcrumb-item>调动登记列表</el-breadcrumb-item>
            </el-breadcrumb>

            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>

        </table>

        <el-table :data="table"
                  stripe
                  style="width: 100%; background-color: #F1F2F7; ">
           
            <el-table-column prop="first_kind_name"
                             label="I级机构名称">
            </el-table-column>
            <el-table-column prop="second_kind_name"
                             label="II级机构名称">
            </el-table-column>
            <el-table-column prop="third_kind_name"
                             label="III级机构名称">
            </el-table-column>
            <el-table-column prop="salary_standard_name"
                             label="薪酬标准">

            </el-table-column>
            <el-table-column prop="human_name"
                             label="名字">
              
            </el-table-column>
            <el-table-column label="调动">
                <template slot-scope="scope">
                    <el-button size="mini"
                               type="danger"
                               v-on:click="fu(scope.row)">调动</el-button>
                </template>
            </el-table-column>
        </el-table>

        <el-pagination v-on:size-change="handleSizeChange"
                       v-on:current-change="handleCurrentChange"
                       :current-page="currentPage"
                       :page-sizes="[3, 6, 9, 12]"
                       :page-size="pageSize"
                       layout="total, sizes, prev, pager, next, jumper"
                       :total="row">
        </el-pagination>



    </div>

</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            table: [],
            currentPage: 1,
            pageSize: 3,
            row: 1,
            name: "",
            sql: "",
            tj:""
        },
        methods: {
            je(val) {
                return Number(val).toFixed(2);
            },
            fill: function () {

                this.tj =@Html.Raw(Json.Encode(ViewBag.strList));
                axios.get('/Transfer/FY', {
                    params: {
                        CurrentPage: this.currentPage,
                        PageSize: this.pageSize,
                        tj: this.tj
                    }
                })
                    .then(res => {
                        this.table = res.data.List;
                        this.row = res.data.Rows;
                       
                    })
                    .catch(err => {
                        console.log(err);
                    })
            },
            handleSizeChange: function (size) {

                this.pageSize = size;
                this.currentPage = 1;
                this.fill();
            },
            handleCurrentChange: function (cpage) {
                this.currentPage = cpage;
                this.fill();
            },
            //调动
            fu: function (i) {



                location.href = '/Transfer/Register?bh=' + i.human_id;
            }
        },
        mounted: function () {
            this.fill();
        },

    })
</script>
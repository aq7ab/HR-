
@{
    Layout = null;

}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="../../css/table.css" type="text/css" />
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <script type="text/javascript" src="../../javascript/jquery-1.7.2.js"></script>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <title>薪酬标准登记</title>
    <style>
        .TD_STYLE1 {
            background-color: #96E1A0;
            padding-left: 27px;
            height:40px;
        }

        .TD_STYLE2 {
            background-color: #D4F8D4;
        }

        .INPUT_STYLE2 {
            background-color: #D4F8D4;
            width: 96%;
        }

        TEXTAREA {
            background-color: #D4F8D4;
            width: 44% !important;
        }
        #d {
            background-color: #96E1A0;
           
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 1;
            filter: alpha(opacity:20);
            opacity: 0.2;
            position: fixed;
            display: none;
        }

        #parent {
            border: 1px solid #FFDB6F;
            width: 400px;
            height: 200px;
            position: absolute;
            z-index: 2;
            top: 20%;
            left: 25%;
            position: fixed;
            display: none;
        }

        #child {
            width: 100%;
            height: 100%;
            color: #C66C35;
            font-size: 15px;
            text-align: center;
            line-height: 25px;
            font-weight: bold;
        }

        .button {
            height: 30px;
            width: 90px;
            border-color: #D4DEE7;
            background-color: #D4DEE7;
            font-weight: bold;
            font-size: 15px;
            color: #481858;
            cursor: pointer;
            BORDER-BOTTOM: #D4DEE7 1px solid;
            FILTER: progid:DXImageTransform.Microsoft.Gradient(GradientType=0, StartColorStr=#ffffff, EndColorStr=#C3DAF5);
        }
    </style>
</head>

<body>
    <div id="app">
        @{ Models.SS s = ViewBag.s;}
        @{ IEnumerable<Models.SSD> jj = ViewBag.i;}
        <form >
            
            <input type="hidden" name="standard.standardId" value="1353320112255">

            <div id="d"></div>
            <div id="parent">
                <div id="child">
                    <br><br>
                    您确认打印此页面的信息吗？<br><br><br>
                    <input type="button" class="button" value="确 定" id="sure"   v-on:click="dy()" />
                    <input type="button" class="button" value="取 消" id="close" />
                </div>
            </div>
            <table width="100%" id="table1">

                <el-breadcrumb separator="/" style="font-size:16px;margin-top:27px">
                    <el-breadcrumb-item :to="{ path: '/' }">人力资源管理</el-breadcrumb-item>
                    <el-breadcrumb-item><a href="#">薪酬标准管理</a></el-breadcrumb-item>
                    <el-breadcrumb-item>
                        薪酬标准登记查询
                    </el-breadcrumb-item>
                </el-breadcrumb>
                <tr>
                    <td align="right">
                        <input type="button" value="打印" class="BUTTON_STYLE1" id="button1">
                        <input type="button" value="返 回" class="BUTTON_STYLE1" onclick="history.back();">
                    </td>
                </tr>
            </table>
            <table id="table2" width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="74" class="TD_STYLE1">
                        薪酬标准编号
                    </td>
                    <td width="168" class="TD_STYLE2">
                        @s.Standard_id

                    </td>
                    <td width="83" class="TD_STYLE1">
                        薪酬标准名称
                    </td>
                    <td width="171" class="TD_STYLE2">
                        @s.Standard_name

                    </td>
                    <td width="170" class="TD_STYLE1">
                        薪酬总额
                    </td>
                    <td width="138" class="TD_STYLE2">
                        @s.Salary_sum

                    </td>
                    <td width="103" class="TD_STYLE1">
                        &nbsp;
                    </td>
                    <td width="95" height="26" class="TD_STYLE2">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        制定人
                    </td>
                    <td class="TD_STYLE2">
                        @s.Designer

                    </td>
                    <td class="TD_STYLE1">
                        复核人

                    </td>
                    <td class="TD_STYLE2">
                        @s.Checker

                    </td>
                    <td class="TD_STYLE1">
                        复核时间
                    </td>
                    <td class="TD_STYLE2">
                        {{Tdate | ftime }}


                    </td>
                    <td class="TD_STYLE1">
                        &nbsp;
                    </td>
                    <td class="TD_STYLE2">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        复核意见
                    </td>
                    <td colspan="7" class="TD_STYLE2" style="height:70px">
                        @s.Check_comment

                    </td>
                </tr>
                <tr class="TD_STYLE1">
                    <td align="center">
                        序号
                    </td>
                    <td colspan="3">
                        薪酬项目名称
                    </td>
                    <td>
                        金额
                    </td>
                    <td colspan="3">
                        &nbsp;
                    </td>
                </tr>
                <tbody v-for="(cc,index) in xh">

                    <tr class="TD_STYLE2">
                        <td align="center">
                            {{cc.Item_id}}

                            <input type="hidden" value="">
                        </td>
                        <td colspan="3">
                            {{cc.Item_name}}
                            <input type="hidden" id="details1" value="">
                        </td>
                        <td>
                            {{je(cc.Salary)}}
                        </td>
                        <td colspan="3">
                            &nbsp;
                        </td>
                    </tr>

                </tbody>

            </table>

            <p>
                &nbsp;
            </p>
        </form>

    </div>
</body>
</html>
<script type="text/javascript">

   
    $(function () {
        $("#button1").click(function () {
            $("#table1").hide(800);
            $("#table2").hide(800);

            $("#d").show(1800);
            $("#parent").fadeIn(2200);
        });
        $("#close").click(function () {
            $("#d").hide(800);
            $("#parent").hide(600);

            $("#table1").show(1000);
            $("#table2").show(1000);

        });
        $("#sure").click(function () {

            $("#d").hide(800);
            $("#parent").fadeOut(600);

            $("#table1").show(1000);
            $("#table2").show(1000);
            
        });
    });

</script>
<script>

    var vm = new Vue({
        el: "#app",
        data: {
            xh: [],
            table:[],
          djr:"",
            bh: "",
            bei: "",
            standardName: "",
            Tdate: "",
            fhr:"",
            designer: "",
            zong: "",
            zz:""

        },
        methods: {
            je(val) {
                return Number(val).toFixed(2);
            },

            dy() {
                var table = document.getElementById("table2");
                var html = table.outerHTML;
                var url = 'data:application/vnd.ms-excel;charset=utf-8,' + encodeURIComponent(html);
                var downloadLink = document.createElement("a");
                downloadLink.href = url;
                downloadLink.download = "table.xls";
                document.body.appendChild(downloadLink);
                downloadLink.click();
                document.body.removeChild(downloadLink);
            },


            fill: function () {
              
                this.bh =@Html.Raw(Json.Encode(s.Standard_id));
                this.designer =@Html.Raw(Json.Encode(s.Designer));
                this.standardName =@Html.Raw(Json.Encode(s.Standard_name));
                this.zong = @Html.Raw(Json.Encode(s.Salary_sum));
                this.fhr =@Html.Raw(Json.Encode(s.Checker));
                this.Tdate =@Html.Raw(Json.Encode(s.Check_time));
                this.bei =@Html.Raw(Json.Encode(s.Check_comment));
                this.xh =@Html.Raw(Json.Encode(jj));
                this.zz= this.je(this.zong)

            }
        },
        mounted: function () {
            this.fill();

        },
        //时间格式
        filters: {
            ftime: function (value, spe) {
                
                var dt = new Date(value);
                return dt.getFullYear() + "年" + (dt.getMonth() + 1) + "月" + dt.getDate() + "日";
            }
        }
    })
  
</script>




@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script type="text/javascript" src="../../javascript/jquery-1.7.2.js"></script>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>

    <style>
        body {
            background-color: #D4F8D4;
        }
    </style>
</head>

<body>
    <div id="app">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位分类设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <el-button size="mini" class="BUTTON_STYLE1"
                               v-on:click="tj">添加</el-button>
                </td>
            </tr>
        </table>
        <el-table :data="table"
                  stripe
                  style="width: 100%">
            <el-table-column prop="major_kind_id"
                             label="职位分类编号">
            </el-table-column>
            <el-table-column prop="major_kind_name"
                             label="职位分类名称">
            </el-table-column>
            <el-table-column label="操作">
                <template slot-scope="scope">
                    <el-button size="mini"
                               type="danger"
                               v-on:click="sc(scope.row.mfk_id)">删除</el-button>
                </template>
            </el-table-column>
        </el-table>
        <p>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data: {
                table:[],
            },
            methods: {
                fill: function () {
                    axios.get('/Cilent/MK')
                        .then(res => {
                            this.table = res.data;
                        })
                        .catch(err => {
                            console.log(err);
                        })
                },
                tj: function () {
                    location.href = '/Cilent/MajorKindAdd'
                },
                sc: function (id) {
                    this.$confirm('此操作将永久删除该数据，是否继续？', '提示', {
                        confirmButtonText: '确定',
                        cancelButtonText: '取消',
                        type: 'warning'
                    })
                        .then(() => {
                            axios.get('/Cilent/MKDelete', {
                                params: {
                                    mfk_id: id
                                }
                            })
                                .then(res => {
                                    if (res.data > 0) {
                                        this.$message({
                                            type: 'success',
                                            message: '删除成功！'
                                        });
                                        this.fill();
                                    }
                                })
                                .catch(err => {
                                    console.log(err);
                                })
                        }).catch(() => {
                            this.$message({
                                type: 'info',
                                message: '已取消删除'
                            });
                        })
                }
            },
            mounted: function () {
                this.fill();
            }
        })
    </script>
</body>
</html>

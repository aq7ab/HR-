
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <style>
        body {
            background-color: #D4F8D4;
        }
    </style>
</head>

<body>
    <div id="app">

        <el-form ref="form" :model="ruleForm" :rules="rules">

            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--薪酬管理设这--薪酬项目设置--薪酬项目添加
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="提交" v-on:click="tj" class="BUTTON_STYLE1">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back();">
                    </td>
                </tr>
            </table>

            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="19%">
                        薪酬项目名称
                    </td>

                    <td width="81%">
                        <el-form-item prop="name">
                            <el-input v-model="ruleForm.name"></el-input>
                        </el-form-item>
                    </td>
                </tr>
            </table>
        </el-form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data: {
                ruleForm: {
                    name: "",
                },
                rules: {
                    name: [{ required: true, message: '薪酬项目名称不能为空！', trigger: 'blur' }],
                }
            },
            methods: {
                tj: function () {
                    var t = this;
                    t.$refs.form.validate(valid => {
                        if (valid) {
                            axios.get('/Cilent/SIInsert', {
                                params: {
                                    attribute_name: t.ruleForm.name,
                                }
                            })
                                .then(res => {
                                    if (res.data > 0) {
                                        alert("添加成功！")
                                        location.href = '/Cilent/SalaryItem'
                                    }
                                })
                                .catch(err => {
                                    console.log(err);
                                })
                        } else {
                            alert("请填写完整信息！")
                        }
                    })
                }
            }
        })
    </script>
</body>
</html>



@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>人力资源登录页面</title>
    <meta name="description" content="particles.js is a lightweight JavaScript library for creating particles.">
    <meta name="author" content="Vincent Garreau" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <link href="~/css/reset.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>


    <style>
        body {
            background: #96E1A0 !important;
        }

        #particles-js {
            width: 100%;
            height: 100%;
            position: relative;
            background-position: 50% 50%;
            background-size: cover;
            background-repeat: no-repeat;
            background-color: #b6edb6;
            margin-left: auto;
            margin-right: auto;
        }

        .login-center-input input:focus {
            border: 2px solid #96E1A0
        }



        .login-button {
            cursor: pointer;
            width: 250px;
            text-align: center;
            height: 40px;
            line-height: 40px;
            background-color: #96e1a0;
            border-radius: 5px;
            margin: 0 auto;
            margin-top: 50px;
            color: white;
        }

        .login-center-input-text {
            background: white;
            padding: 0 5px;
            position: absolute;
            z-index: 0;
            opacity: 0;
            height: 20px;
            top: 50%;
            margin-top: -10px;
            font-size: 14px;
            left: 5px;
            color: #96e1a0;
            line-height: 20px;
            transition: all 0.5s;
            -moz-transition: all 0.5s;
            -webkit-transition: all 0.5s;
            -o-transition: all 0.5s;
        }
    </style>
</head>
<body>

    <div id="particles-js">
        <div class="login">
            <div class="login-top">
                登录
            </div>
            <div class="login-center clearfix">
                <div class="login-center-img"><img src="~/images/name.png" /></div>
                <div class="login-center-input">
                    <input type="text" name="" id="name" placeholder="请输入您的用户名" onfocus="this.placeholder=''" onblur="this.placeholder='请输入您的用户名'" />
                    <div class="login-center-input-text">用户名</div>
                </div>
            </div>
            <div class="login-center clearfix">
                <div class="login-center-img"><img src="~/images/password.png" /></div>
                <div class="login-center-input">
                    <input type="password" name="" id="pwd" value="" placeholder="请输入您的密码" onfocus="this.placeholder=''" onblur="this.placeholder='请输入您的密码'" />
                    <div class="login-center-input-text">密码</div>
                </div>
            </div>
            <div class="login-button" onclick="dl()">
                登录
            </div>
        </div>
        <div class="sk-rotating-plane"></div>
    </div>

    <!-- scripts -->
    <script src="~/javascript/particles.min.js"></script>
    <script src="~/javascript/app.js"></script>



</body>
</html>
<script>
    function dl() {
        var name = document.getElementById("name").value;
        var pwd = document.getElementById("pwd").value;
        if (name.length <= 0) {
            alert("请输入用户名称！");
            return;
        }
        if (pwd.length <= 0) {
            alert("请输入用户密码！");
            return;
        }
        axios.post('/Home/Login', {
            
                U_name: name,
                U_password: pwd
            
        })
            .then(res => {
                console.log(res.data)
                if (res.data >0) {
                    alert("登录成功！");
                    location.href = "/Home/Index";
                   
                } else {
                    alert("登录失败！请重新输入！");
                   
                }

            }).catch(err => {
                console.log(err);
            })
    }
   
</script>
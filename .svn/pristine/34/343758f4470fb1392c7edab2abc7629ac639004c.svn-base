
@{
    Layout = null;
   
}
@using Models
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <style>
        body {
            background-color: #D4F8D4;
        }
    </style>
</head>
<body>
    <div id="app">
        <el-form ref="form" :model="ruleForm" :rules="rules">

            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置--III级机构添加
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="提交" v-on:click="tj" class="BUTTON_STYLE1">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back();">
                    </td>
                </tr>
            </table>

            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
               

                <tr>
                    <td>
                        级机构名称
                    </td>
                    <td>
                       
                        <el-cascader v-model="value1"
                                     :options="options"
                                     placeholder="请选择机构名称"
                                     clearable
                                   ></el-cascader>
                            

                       
                    </td>
                </tr>
                <tr>
                    <td width="19%">
                        III级机构编号
                    </td>

                    <td width="81%">
                    </td>
                </tr>
                <tr>
                    <td>
                        III级机构名称
                    </td>
                    <td>
                        <el-form-item prop="name">
                            <el-input v-model="ruleForm.name"></el-input>
                        </el-form-item>
                    </td>
                </tr>

                <tr>
                    <td>
                        销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td>
                        <el-form-item prop="xsr">
                            <el-input v-model="ruleForm.xsr" type="textarea" rows="3"></el-input>
                        </el-form-item>

                    </td>
                </tr>
                <tr>
                    <td>
                        是否为零售店（是/否）
                    </td>
                    <td>
                        <el-select v-model="value2">
                            <el-option v-for="item in options1"
                                       :key="item.value"
                                       :label="item.label"
                                       :value="item.value">
                            </el-option>

                        </el-select>
                    </td>
                </tr>
               
            </table>

        </el-form>
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            ruleForm: {
                bh: "",
                name: "",
                xsr: ""
            },

            options: [],
            options1: [{
                value: '是',
                label: '是'
            }, {
                    value: '否',
                    label: '否'
                },],

            value1: [],
            value2:"",
            rules: {

                name: [
                    { required: true, message: ' III级机构名称不能为空', trigger: 'blur' }
                ],

                value1: [
                    { required: true, message: ' 请选择II级机构名称', trigger: 'blur' }
                ],
                value2: [
                    { required: true, message: ' 请选择是否为零售店', trigger: 'blur' }
                ],

                xsr: [
                    { required: true, message: ' 销售责任人编号不能为空', trigger: 'blur' }
                ],
            },
        },
        methods: {
           
            cc: function () {

                axios.get('/Cilent/ThirdKindXia')
                    .then(res => {
                        this.options = res.data;
                        console.log(this.options)

                    })
                    .catch(err => {
                        console.log(err);
                    })
            },
            //添加
            tj: function () {
                var t = this;
               
                t.$refs.form.validate(valid => {
                    if (valid) {
                        axios.get('/Cilent/ThirdKindInsert1', {
                            params: {
                                first_kind_id: t.value1[0],
                                second_kind_id: t.value1[1],
                                third_kind_name: t.ruleForm.name,
                                third_kind_sale_id: t.ruleForm.xsr,
                                third_kind_is_retail: t.value2

                            }
                        })
                            .then(res => {
                                if (res.data > 0) {
                                    alert("添加成功！")
                                    location.href = '/Cilent/ThirdKind'
                                }
                            }).catch(err => {
                                console.log(err);
                            })
                    } else {
                        alert("请输入完整信息！")
                    }
                })

            },


        },
         mounted: function () {
            this.cc();
        },

    })

</script>



@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <style>
        body {
            background-color: #D4F8D4;
        }
    </style>
</head>
<body>
    <div id="app">


        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <el-button size="mini" class="BUTTON_STYLE1"
                               v-on:click="tj">添加</el-button>

                </td>
            </tr>
        </table>
        <el-table :data="tableData"
                  stripe
                  style="width: 100%">
            <el-table-column prop="First_kind_id"
                             label="I级机构编号">
            </el-table-column>
            <el-table-column prop="First_kind_name"
                             label="I级机构名称">
            </el-table-column>
            <el-table-column prop="First_kind_salary_id"
                             label="薪酬发放责任人编号">
            </el-table-column>
            <el-table-column prop="First_kind_sale_id"
                             label="销售责任人编号">
            </el-table-column>
            <el-table-column label="操作">
                <template slot-scope="scope">

                    <el-button size="mini"
                               v-on:click="bj(scope.row.Ffk_id)">变更</el-button>
                    <el-button size="mini"
                               type="danger"
                               v-on:click="sc(scope.row.Ffk_id)">删除</el-button>
                </template>
            </el-table-column>
        </el-table>
        <p>


    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            tableData: [],
        },
        methods: {
            //查询全部
            fill: function () {
                axios.get('/Cilent/FirstKind1')
                    .then(res => {

                        this.tableData = res.data;

                    })
                    .catch(err => {
                        console.log(err);
                    })
            },
            //更改
            bj: function (i) {
                location.href = '/Cilent/FirstKindUpdate?id=' + i + ''

            },
            //删除
            sc: function (id) {
                this.$confirm('此操作将永久删除该文件, 是否继续?', '提示', {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning'
                }).then(() => {
                    axios.get('/Cilent/FirstKindDelete', {
                        params: {
                            id: id
                        }
                    }).then(res => {
                        if (res.data > 0) {
                            this.$message({
                                type: 'success',
                                message: '删除成功!'
                            });
                            this.fill();
                        }
                    }).catch(err => {
                        console.log(err);
                    })

                }).catch(() => {
                    this.$message({
                        type: 'info',
                        message: '已取消删除'
                    });
                });


            },
            //新增
            tj: function () {
                location.href = '/Cilent/FirstKindInsert'
            }
        },
        mounted: function () {
            this.fill();
        },
    })

</script>
